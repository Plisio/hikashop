<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.1" method="upgrade" group="hikashoppayment">
    <name>Plisio Payment Gateway plugin</name>
    <creationDate>01 april 2025</creationDate>
    <version>1.0.0</version>
    <author>Plisio</author>
    <authorEmail>plugins@plisio.net</authorEmail>
    <authorUrl>https://plisio.net</authorUrl>
    <license>MIT</license>
    <description>This plugin enables you to setup your Plisio payment gateway</description>
    <files>
        <filename plugin="plisio">plisio.php</filename>
    </files>
    <params addpath="/components/com_hikashop/params">
        <param name="pluginoptions" type="pluginoptions" default="plugin" label="plisio" description="Plisio options" />
    </params>
    <config>
        <fields name="params" addfieldpath="/components/com_hikashop/fields">
            <fieldset name="basic">
                <field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="plisio" description="Plisio options" />
            </fieldset>
        </fields>
    </config>
</extension>
